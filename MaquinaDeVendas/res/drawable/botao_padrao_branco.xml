<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid 
                android:color="#ffe0b2" />
            <stroke 
                android:width="1dp" 
                android:color="@color/laranja_primario" />
            <corners 
                android:radius="2dip" />
            <padding 
                android:bottom="10dp" 
                android:left="8dp" 
                android:right="8dp" 
                android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
         <shape>
            <solid 
                android:color="@color/branco_desabilitado" />
            <stroke 
                android:width="1dp" 
                android:color="@color/cinza_primario" />
            <corners 
               	android:radius="2dip" />
            <padding  
                android:bottom="10dp" 
                android:left="8dp" 
                android:right="8dp" 
                android:top="10dp" />
        </shape>
     </item>
    <item>
        <shape>
           <solid 
                android:color="@color/background_material_light" />
            <stroke 
                android:width="1dp" 
                android:color="@color/laranja_primario" />
            <corners 
               android:radius="2dip" />
            <padding 
                android:bottom="10dp" 
                android:left="8dp" 
                android:right="8dp" 
                android:top="10dp" />
        </shape>
     </item>
</selector>